# Example environment variables for Django Banking Platform
# Copy this file to .env and update the values

# Django settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
DJANGO_SETTINGS_MODULE=banking_platform.settings.development
ALLOWED_HOSTS=localhost,127.0.0.1

# Database settings
DATABASE_URL=postgresql://username:password@localhost:5432/banking_db
# For SQLite (development): leave DATABASE_URL empty

# Cache settings (Redis for production)
REDIS_URL=redis://127.0.0.1:6379/1

# Email settings (for production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Security settings (set to True in production with HTTPS)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Error monitoring (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
ENVIRONMENT=development

# Performance settings
GUNICORN_WORKERS=3
GUNICORN_TIMEOUT=120